<% for(let post of posts) { %>
    <div class="post">
        <h2><a href="<%= post.path %>"><%= post.title %></a></h2>
        <p class="date"><%= post.date %></p>
        <div class="text">
            <%= post.summary %> <a href="<%= post.path %>">Read more &#8594;</a>
        </div>
    </div>        
<% } %>

